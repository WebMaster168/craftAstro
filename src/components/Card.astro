---
interface Props {
    title: string
}

const { title } = Astro.props
---

<a href="##" class="card">
    <img src="/img/itemBg.jpg" alt="" class="card__photo" />
    <h3 class="card__title">
        {title}
    </h3>
</a>

<style is:global lang="scss">
    .card {
        overflow: hidden;
        position: relative;
        height: fluid(180px, 260px);
        padding: 24px;
        padding-right: 31px;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
        display: flex;
        align-items: flex-end;
        @include hover {
            &:hover {
                .card__photo {
                    transform: scale(1.1);
                }
            }
        }
        &__title {
            color: #ffffff;
            font-size: fluid(16px, 20px);
            font-weight: 700;
            line-height: fluid(18px, 22px);
        }
        &__photo {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
            transition: transform $transition;
        }
    }
</style>
