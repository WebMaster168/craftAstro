---
import Btn from "./Btn.astro"

interface Props {
  contacts?: boolean
}
const { contacts } = Astro.props
---

{
  contacts ? (
    <section class="feedback section">
      <div class="feedback__container feedback__container--textLeft">
        <img src="/img/bg.png" alt="" class="feedback__bg" />
        <h2 class="feedback__title">Напишите нам</h2>
        <form action="" class="feedback__form">
          <input type="text" name="name" class="feedback__form-input feedback__form-input--width" placeholder="Имя" />
          <input
            type="text"
            name="phone"
            class="feedback__form-input feedback__form-input--width"
            placeholder="+7 (___) ___-__-__"
          />
          <textarea class="feedback__form-input feedback__form-input--full" placeholder="Сообщение" />
          <div class="feedback__form-wrapper feedback__form-wrapper--mb">
            <input type="checkbox" class="feedback__form-checkbox" checked id="check" />
            <label for="check" class="feedback__form-text">
              Я согласен на обработку моих персональных данных и с условиями <a href="">политики конфиденциальности</a>.
            </label>
          </div>
          <Btn submit>Отправить</Btn>
        </form>
      </div>
    </section>
  ) : (
    <section class="feedback section">
      <div class="feedback__container">
        <img src="/img/bg.png" alt="" class="feedback__bg" />
        <h2 class="feedback__title">Оставьте заявку на бесплатную консультацию</h2>
        <div class="feedback__text">
          Наш специалист перезвонит в течение 10 минут и поможет найти оптимальное решение.
        </div>
        <form action="" class="feedback__form">
          <input type="text" name="name" class="feedback__form-input" placeholder="Имя" />
          <input type="text" name="phone" class="feedback__form-input" placeholder="+7 (___) ___-__-__" />
          <Btn submit>Заказать звонок</Btn>
          <div class="feedback__form-wrapper">
            <input type="checkbox" class="feedback__form-checkbox" checked id="check" />
            <label for="check" class="feedback__form-text">
              Я согласен на обработку моих персональных данных и с условиями <a href="">политики конфиденциальности</a>.
            </label>
          </div>
        </form>
      </div>
    </section>
  )
}

<style is:global lang="scss">
  .feedback {
    @include section;
    &__container {
      grid-area: center;
      position: relative;
      padding: fluid(30px, 40px);
      padding-bottom: fluid(40px, 50px);
      background-color: #1f0f06cc;
      text-align: center;
      &--textLeft {
        text-align: left;
        padding-bottom: fluid(30px, 40px);
      }
    }
    &__bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.3;
      object-fit: cover;
      filter: grayscale(100%);
      z-index: -1;
    }
    &__title {
      color: #ffffff;
      font-size: fluid(34px, 44px);
      font-weight: 800;
      line-height: fluid(40px, 50px);
      margin-bottom: 30px;
      text-transform: uppercase;
    }
    &__text {
      color: #ffffff;
      font-size: 18px;
      line-height: 28px;
      margin-bottom: fluid(30px, 50px);
    }
    &__form {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      &-input {
        width: 37.9%;
        background-color: #ffffff;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 15px;
        padding-right: 15px;
        font-size: 18px;
        font-weight: 500;
        line-height: 22px;
        color: #281d15;
        &::placeholder {
          color: #5a5a5a;
        }
        &--width {
          width: 49.5%;
        }
        &--full {
          width: 99.8%;
        }
      }
      textarea {
        resize: none;
        height: fluid(120px, 140px);
        &::-webkit-scrollbar {
          width: 14px;
        }
        &::-webkit-scrollbar-track {
          background: transparent;
        }
        &::-webkit-scrollbar-thumb {
          background-color: #c26733;
          border-radius: 20px;
          border: 5px solid #ffffff;
        }
      }
      &-wrapper {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 8px;
        &--mb {
          margin-bottom: fluid(10px, 25px);
        }
      }

      &-checkbox {
        appearance: none;
        width: 16px;
        height: 16px;
        transition: all $transition;
        background-color: #ffffff;
        background-image: url(/img/Union.svg);
        background-repeat: no-repeat;
        background-size: 12px contain;
        background-position: center;
        &:checked {
          background-color: #c26733;
        }
      }

      &-text {
        font-size: 16px;
        line-height: 24px;
        text-align: left;
        color: #9c9c9c;
        a {
          position: relative;
          &::after {
            content: " ";
            position: absolute;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 1px;
            background-color: #9c9c9c;
            transition: width $transition;
          }
          @include hover {
            &:hover {
              &::after {
                width: 0%;
              }
            }
          }
        }
      }
    }
  }
  @include laptop {
    .feedback {
      &__container {
        padding: 20px;
      }
      &__title {
        font-size: 30px;
        line-height: 35px;
      }
      &__form {
        &-input,
        .btn {
          width: 100%;
        }
        &-text {
          width: 90%;
        }
      }
    }
  }
</style>
