---
import Btn from "./Btn.astro"

interface Props {
  variant?: string
}

const { variant = undefined } = Astro.props

const upperMenu: string[] = [
  "Главная",
  "О компании",
  "Услуги / Каталог продукции",
  "Готовые объекты",
  "Блог",
  "Контакты",
]
---

<nav class:list={["navigation", variant ? `navigation--${variant}` : ""]}>
  <ul class="navigation__list">
    {
      upperMenu.map(item => (
        <li class="navigation__list-item">
          <a class="navigation__list-link" href="#">
            {item}
          </a>
        </li>
      ))
    }
  </ul>
  <Btn href="#application" variant="nav" modal>Заказать бесплатную консультацию</Btn>
</nav>
<style is:global lang="scss">
  .navigation {
    display: flex;
    &__list {
      background-color: #fff;
      width: 76%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: fluid-screen(16px, 64px);
      padding-top: 22px;
      padding-bottom: 22px;
      padding-left: fluid-screen(15px, 36px);
      padding-right: fluid-screen(15px, 30px);
      &-link {
        font-size: fluid-screen(13px, 14px);
        line-height: fluid-screen(16px, 18px);
        color: #281d15;
        font-weight: 600;
        transition: color $transition;
        @include hover {
          &:hover {
            color: #c26733;
          }
        }
      }
    }
  }
  @include laptop {
    .navigation {
      display: none;
      &--mobile {
        display: flex;
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
        .navigation__list-link {
          font-size: 16px;
          line-height: 24px;
        }
      }
      &__list {
        padding: 0;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
      }
    }
  }
</style>
