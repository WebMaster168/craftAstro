---
import Btn from "./Btn.astro"
---

<section class="hero section">
    <img src="/img/bg.png" alt="" class="hero__photo" />
    <div class="hero__container">
        <div class="hero__info">
            <h1 class="title hero__title">Быстровозводимые здания из сэндвич панелей в Саратове</h1>
            <Btn href="#cost" modal>Узнать стоимость</Btn>
        </div>

        <div class="hero__swiper swiper">
            <div class="swiper-wrapper">
                <div class="hero__swiper-slide swiper-slide">
                    <img src="/img/Image.jpg" />
                </div>
                <div class="hero__swiper-slide swiper-slide">
                    <img src="/img/Image.jpg" />
                </div>
                <div class="hero__swiper-slide swiper-slide">
                    <img src="/img/Image.jpg" />
                </div>
                <div class="hero__swiper-slide swiper-slide">
                    <img src="/img/Image.jpg" />
                </div>
            </div>
            <div class="hero__btns">
                <div class="hero__btn hero__btnPrev swiper-button-prev icon-arrow"></div>
                <div class="hero__btn hero__btnNext swiper-button-next icon-arrow"></div>
            </div>
            <div class="hero__pagination swiper-pagination"></div>
        </div>
    </div>

    <style is:global lang="scss">
        .hero {
            position: relative;
            height: 100vh;
            @include section;
            background-color: #1f0f06cc;
            &__container {
                display: flex;
                grid-area: right;
            }
            &__title {
                margin-bottom: fluid(30px, 70px);
                color: #ffffff;
                font-size: fluid-screen(34px, 56px);
                line-height: fluid(36px, 70px);
            }
            &__info {
                position: relative;
                padding-top: fluid(240px, 280px);
                width: 50%;
            }
            &__photo {
                left: -25%;
                top: 0;
                position: absolute;
                width: 100%;
                height: 100%;
                opacity: 0.3;
                object-fit: cover;
                filter: grayscale(100%);
                z-index: -1;
            }
            &__swiper {
                width: 55%;
                height: 100vh;
                user-select: none;
                &-slide {
                    position: relative;
                    &::after {
                        content: "";
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        background-color: #00000066;
                    }
                    img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                }
            }
            .swiper-horizontal > .swiper-pagination-bullets,
            .swiper-pagination-bullets.swiper-pagination-horizontal {
                bottom: 21px;
            }
            .swiper-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet,
            .swiper-pagination-horizontal.swiper-pagination-bullets .swiper-pagination-bullet {
                margin: 5px;
            }
            &__pagination {
                .swiper-pagination-bullet {
                    width: 8px;
                    height: 8px;
                    background-color: #8a8a8a;

                    &.swiper-pagination-bullet-active {
                        background-color: #ffffff;
                    }
                }
            }
            &__btns {
                display: flex;
                gap: 10px;
                position: absolute;
                left: 22px;
                bottom: 32px;
            }
            &__btn {
                background-color: #c26733;
                color: #ffffff;
                position: relative;
                width: fluid(60px, 70px);
                height: fluid(60px, 70px);
                font-size: 14px;
                left: auto;
                right: auto;
                &::after {
                    content: "";
                    width: 0%;
                    height: 100%;
                    position: absolute;
                    left: 0;
                    top: 0;
                    background-color: #281d15;
                    z-index: -1;
                    transition: width $transition;
                }
                @include hover {
                    &:hover {
                        &::after {
                            width: 100%;
                        }
                    }
                }
                &Next {
                    &::before {
                        transform: rotate(-180deg);
                    }
                    &:after {
                        left: auto;
                        right: 0;
                    }
                }
            }
        }
        @include laptop {
            .hero {
                height: auto;
                &__container {
                    flex-direction: column;
                    gap: 30px;
                    grid-area: center;
                    padding-bottom: 30px;
                }
                &__info {
                    padding-top: 100px;
                    width: 100%;
                }
                &__swiper {
                    width: 100%;
                    height: 450px;
                }
                &__title {
                    font-size: 26px;
                    line-height: 30px;
                }
            }
        }
        @include phone {
            .hero {
                &__btns {
                    display: none;
                }
                &__swiper {
                    height: 300px;
                }
            }
        }
    </style>
    <script>
        import Swiper from "swiper"
        import { Navigation, Pagination } from "swiper/modules"

        const hero = document.querySelector(".hero__swiper")
        if (hero instanceof HTMLElement) {
            const heroSwiper = new Swiper(hero, {
                modules: [Navigation, Pagination],
                slidesPerView: 1,
                loop: true,
                navigation: {
                    prevEl: ".hero__btnPrev",
                    nextEl: ".hero__btnNext",
                },
                pagination: {
                    el: ".hero__pagination",
                    clickable: true,
                },
            })
        }
    </script>
</section>
